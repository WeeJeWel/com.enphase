      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "units": "kWh",
      "icon": "/assets/IQbat/IQbat_coins.svg"
    },
    "IQbat_grid_import": {
      "id": "IQbat_grid_import",
      "type": "number",
      "title": {
        "en": "Import today",
        "nl": "Gekocht vandaag"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "units": "kWh",
      "icon": "/assets/IQbat/IQbat_powerline.svg"
