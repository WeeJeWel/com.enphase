    "IQbat_connectiontype": {
      "id": "IQbat_connectiontype",
      "type": "string",
      "title": {
        "en": "Connection Type",
        "nl": "Verbindingstype"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/IQbat/IQbat_network.svg"
    },
    "IQbat_discharge": {
      "id": "IQbat_discharge",
      "type": "number",
      "title": {
        "en": "Battery Discharged",
        "nl": "Batterij ontladen"
