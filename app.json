    {
      "platforms": [
        "local",
        "cloud"
      ],
      "connectivity": [
        "cloud"
      ],
      "images": {
        "small": "/drivers/inventer/assets/images/small.png",
        "large": "/drivers/inventer/assets/images/large.png",
        "xlarge": "/drivers/inventer/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "login_credentials",
          "template": "login_credentials",
          "options": {
            "logo": "logo.svg"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "id": "username",
          "type": "text",
          "label": {
            "en": "Username"
          }
        },
        {
          "id": "password",
          "type": "password",
          "label": {
            "en": "Password"
          }
        }
      ],
      "name": {
        "nl": "Enphase IQ Batterij",
        "en": "Enphase IQ Battery"
      },
      "class": "other",
      "capabilities": [
        "IQbat_solar_production",
        "IQbat_grid_import",
        "IQbat_charge",
        "IQbat_discharge",
        "IQbat_home",
        "IQbat_export",
        "IQbat_last_update",
        "IQbat_level",
        "IQbat_connectiontype",
        "measure_battery"
