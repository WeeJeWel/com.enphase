      "capabilitiesOptions": {
        "IQbat_connectiontype": {
          "title": {
            "en": "Connection",
            "nl": "Verbinding"
          }
        }
      },
      "capabilitiesConfig": {
        "IQbat_level": {
          "statusIndicator": true
        }
      },
      "id": "inventer"
